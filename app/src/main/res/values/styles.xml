<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="CustomTabText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="WhiteBox">
        <item name="android:background">@android:color/white</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
        <item name="android:textSize">@dimen/box_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/roboto_thin</item>
    </style>


    <dimen name="box_text_size">24sp</dimen>
</resources>